module offlinePrimaryVerticesFromCTFTracksTKF = offlinePrimaryVertices from "RecoVertex/PrimaryVertexProducer/data/OfflinePrimaryVertices.cfi"
replace offlinePrimaryVerticesFromCTFTracksTKF.algorithm = "TrimmedKalmanFinder"


#include "Validation/RecoVertex/data/OffLinePVFromRSTracks.cfi"
 
